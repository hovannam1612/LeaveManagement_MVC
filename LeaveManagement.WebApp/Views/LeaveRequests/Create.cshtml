@using LeaveManagement.WebApp.Models.ViewModels.LeaveHistories
@model CreateLeaveRequestVM

<partial name="_StatusMessage" />
<div class="card">
    <div class="card-header" style="background-color: #343a40; color: white">
        <h4>Create request</h4>
    </div>
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="LeaveTypeId" class="control-label"></label>
                        @Html.DropDownListFor(q => q.LeaveTypeId, new SelectList(Model.LeaveTypes, "Value", "Text"), "Select Leave Type", new { @class = "form-control" })
                        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input autocomplete="off" asp-for="StartDate" class="form-control datepicker" placeholder="Click to choose start date" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input autocomplete="off" asp-for="EndDate" class="form-control datepicker" placeholder="Click to choose end date" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="RequestComments" class="control-label"></label>
                        <input asp-for="RequestComments" class="form-control" placeholder="Enter your request comment" />
                        <span asp-validation-for="RequestComments" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fas fa-plus" aria-hidden="true"></i> Create Request</button>
                        <a class="btn btn-primary" asp-action="MyLeave"><i class="fas fa-arrow-circle-left"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFomat: "yy-mm-dd"
            });
        });
    </script>
}