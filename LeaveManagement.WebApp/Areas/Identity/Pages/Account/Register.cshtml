@page
@model RegisterModel
    <div class="page-header mb-5" data-parallax="true" style="background-image: url('../../assets/img/login-image.jpg'); width: 100%;">
        <div class="filter"></div>
        <div class="container login-container" style="z-index: 10000;">
            <partial name="_StatusMessage" for="StatusMessage"/>
            <form method="post" id="register">
                <div class="row justify-content-center">
                    <div class="col-md-6 login-form-1">
                        <h3>REGISTER</h3>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Firstname" class="text-white"></label>
                            <input asp-for="Input.Firstname" class="form-control" placeholder="Enter your first name" />
                            <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Lastname" class="text-white"></label>
                            <input asp-for="Input.Lastname" class="form-control" placeholder="Enter your last name" />
                            <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.UserName" class="text-white"></label>
                            <input asp-for="Input.UserName" class="form-control" placeholder="Enter your user name" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="text-white"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="text-white"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="text-white"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Enter your re-password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group btn-submit">
                            <button type="submit" class="btn btn-primary mt-3" style="background-color: #00ff90; outline: 0; border: 0; border-radius: 20px; color: black; padding: 10px 25px;">REGISTER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

