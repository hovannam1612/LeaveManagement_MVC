@using LeaveManagement.WebApp.Models.ViewModels.LeaveAllocations
@model ViewAllocationsVM

<div class="card">
    <div class="card-header bg-dark text-white">
        <h4>Details - @Model.Employee.Firstname @Model.Employee.Lastname</h4>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee.UserName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.UserName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee.PhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.PhoneNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee.Firstname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.Firstname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee.Lastname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.Lastname)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee.DateOfBirth)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.DateOfBirth)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-dark text-white">
        <h4>Leave Allocations</h4>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            @if(Model.LeaveAllocations.Count() < 1)
            {
                <li class="list-group-item"><p>Employee don't have any leave allocations</p></li>
            }
            @foreach (var item in Model.LeaveAllocations)
            {
                <li class="list-group-item">
                    <h6>
                        <b>@item.LeaveType.Name</b>
                        <span class="badge badge-secondary">number of days - @item.NumberOfDays</span>
                        <a asp-action="UpdateAllocation" asp-route-id="@item.Id" class="btn btn-warning ml-4"><i class="fas fa-edit"></i> Edit</a>
                    </h6>
                </li>
            }
        </ul>
    </div>
</div>

<div>
    <a class="btn btn-primary mb-2" asp-action="Index"><i class="fa fa-arrow-left"></i> Back to List</a>
</div>