@using LeaveManagement.WebApp.Models.ViewModels.Roles
@model IEnumerable<RoleVM>
@{
    ViewData["Title"] = "List of roles";
    int index = 1;
}

<partial name="_StatusMessage" />
<div class="mb-2">
    <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus" aria-hidden="true"></i> Create role</a>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Accounts"><i class="fas fa-users"></i> List of users</a>
</div>
<div class="card">
    <div class="card-header" style="background-color: #343a40; color: white">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered display" id="dataTable">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Role Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@index</td>
                        @{
                            index++;
                        }
                        <td>
                            <p>@role.Name</p>
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@role.Id"><i class="fas fa-edit"></i> Update</a>
                            <a class="btn btn-sm btn-danger ml-1" asp-action="Delete" asp-route-id="@role.Id"
                               onclick="return confirm('Do you want to delete this record?');">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "columns": [
                    { "width": "60%" },
                    null,
                ]
            });
        });
    </script>
}